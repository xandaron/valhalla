{
    "version": "2.0.0",
    "command": "",
    "args": [],
    "tasks": [
        {
            "label": "Windows mkdir",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/C",
                "if not exist \"./bin\" mkdir \"./bin\""
            ]
        },
        {
            "label": "Linux mkdir",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "if [ ! -d './bin' ]; then mkdir ./bin; fi;"
            ]
        },
        {
            "label": "compile shaders windows",
            "type": "shell",
            "command": "./assets/shaders/compile.bat"
        },
        {
            "label": "compile shaders linux",
            "type": "shell",
            "command": "./assets/shaders/compile.sh"
        },
        {
            "label": "debug",
            "type": "shell",
            "command": "odin build . -debug -out:bin/debug.exe",
            "group": "build"
        },
        {
            "label": "build",
            "type": "shell",
            "command": "odin build . -out:bin/build.exe",
            "group": "build"
        },
        {
            "label": "Debug Windows",
            "dependsOn": [
                "Windows mkdir",
                "compile shaders windows",
                "debug"
            ]
        },
        {
            "label": "Release Windows",
            "dependsOn": [
                "Windows mkdir",
                "compile shaders windows",
                "build"
            ]
        },
        {
            "label": "Debug Linux",
            "dependsOn": [
                "Linux mkdir",
                "compile shaders linux",
                "debug"
            ]
        },
        {
            "label": "Release Linux",
            "dependsOn": [
                "Linux mkdir",
                "compile shaders linux",
                "build"
            ]
        }
    ]
}