{
    "version": "2.0.0",
    "command": "",
    "args": [],
    "tasks": [
        {
            "label": "Windows mkdir",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/C",
                "if not exist ./build mkdir ./build"
            ]
        },
        {
            "label": "Linux mkdir",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "if [ ! -d './build' ]; then mkdir ./build; fi;"
            ]
        },
        {
            "label": "compile_shaders",
            "type": "shell",
            "command": "./assets/shaders/compile.bat"
        },
        {
            "label": "debug",
            "type": "shell",
            "command": "odin build . -debug -out:build/debug.exe",
            "group": "build"
        },
        {
            "label": "build",
            "type": "shell",
            "command": "odin build . -out:build/build.exe",
            "group": "build"
        },
        {
            "label": "Build",
            "dependsOn": [
                "Windows mkdir",
                "compile_shaders",
                "debug",
                "build"
            ]
        },
        {
            "label": "Build Linux",
            "dependsOn": [
                "Linux mkdir",
                "debug",
                "build"
            ]
        }
    ]
}